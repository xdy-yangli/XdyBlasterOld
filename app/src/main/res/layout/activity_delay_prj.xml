        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false">

        </androidx.viewpager.widget.ViewPager>

        <View
            android:layout_width="match_parent"
